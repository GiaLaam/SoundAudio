@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model MyWebApp.Models.Album
@{
    ViewData["Title"] = Model.Name;
    var apiBaseUrl = Configuration["ApiSettings:BaseUrl"] ?? "http://localhost:5289";
    var songs = ViewBag.Songs as List<MyWebApp.Models.MusicFile> ?? new List<MyWebApp.Models.MusicFile>();
}

<div class="container mt-4">
    <!-- Header Album -->
    <div class="row mb-4">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@(apiBaseUrl + Model.ImageUrl)" class="img-fluid rounded shadow album-cover" alt="@Model.Name" />
            }
            else
            {
                <div class="album-cover-placeholder d-flex align-items-center justify-content-center bg-secondary rounded shadow">
                    <i class="fas fa-compact-disc fa-5x text-white-50"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="album-info">
                <p class="text-uppercase text-muted mb-2">
                    <i class="fas fa-compact-disc me-2"></i>Album
                </p>
                <h1 class="display-4 text-white mb-3">@Model.Name</h1>
                <div class="d-flex align-items-center text-muted mb-3">
                    <span class="me-4">
                        <i class="fas fa-calendar-alt me-2"></i>
                        @Model.CreatedAt.ToString("dd/MM/yyyy")
                    </span>
                    <span>
                        <i class="fas fa-music me-2"></i>
                        @songs.Count bài hát
                    </span>
                </div>
                <div class="mt-4">
                    <a asp-controller="Album" asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách bài hát -->
    <div class="songs-section">
        <h3 class="text-white mb-3">
            <i class="fas fa-list-ul me-2"></i>Bài hát trong album
        </h3>
        
        @if (!songs.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Album này chưa có bài hát nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th style="width: 60px;"></th>
                            <th>Tên bài hát</th>
                            <th style="width: 150px;">Ngày tải lên</th>
                            <th style="width: 100px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < songs.Count; i++)
                        {
                            var song = songs[i];
                            <tr class="song-row">
                                <td class="align-middle">@(i + 1)</td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(song.ImageUrl))
                                    {
                                        <img src="@(apiBaseUrl + song.ImageUrl)" class="song-thumbnail" alt="@song.NameSong" />
                                    }
                                    else
                                    {
                                        <div class="song-thumbnail bg-secondary d-flex align-items-center justify-content-center">
                                            <i class="fas fa-music text-white-50"></i>
                                        </div>
                                    }
                                </td>
                                <td class="align-middle">
                                    <div class="song-name">@song.NameSong</div>
                                </td>
                                <td class="align-middle text-muted">
                                    <small>@song.UploadeAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-outline-success" onclick="playSong('@song.Id', '@song.NameSong')">
                                        <i class="fas fa-play me-1"></i>Phát
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    .album-cover {
        width: 100%;
        height: 350px;
        object-fit: cover;
    }

    .album-cover-placeholder {
        width: 100%;
        height: 350px;
    }

    .album-info {
        padding: 20px 0;
    }

    .songs-section {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #3a3a3a;
    }

    .song-thumbnail {
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 4px;
    }

    .song-row {
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .song-row:hover {
        background-color: rgba(76, 175, 80, 0.1) !important;
    }

    .song-name {
        font-weight: 500;
        color: #fff;
    }

    .table-dark {
        background-color: #1a1a1a;
        border-color: #3a3a3a;
    }

    .table-dark thead th {
        border-bottom: 2px solid #3a3a3a;
        color: #9e9e9e;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .table-dark tbody tr {
        border-bottom: 1px solid #2a2a2a;
    }

    .btn-outline-light:hover {
        background-color: #fff;
        color: #000;
    }

    .btn-outline-success {
        border-color: #4CAF50;
        color: #4CAF50;
    }

    .btn-outline-success:hover {
        background-color: #4CAF50;
        border-color: #4CAF50;
        color: #fff;
    }
</style>

