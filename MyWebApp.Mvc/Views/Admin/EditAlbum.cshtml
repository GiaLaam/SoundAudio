@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model MyWebApp.Models.Album
@{
    ViewData["Title"] = "Chỉnh sửa album";
    var apiBaseUrl = Configuration["ApiSettings:BaseUrl"] ?? "http://localhost:5289";
}

<style>
    .edit-album-page {
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.4s ease;
    }
    
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }
    
    .page-title {
        display: flex;
        align-items: center;
        gap: 16px;
    }
    
    .page-title h2 {
        font-size: 28px;
        font-weight: 700;
        color: #fff;
        margin: 0;
    }
    
    .page-title .badge {
        background: linear-gradient(135deg, var(--admin-green), #15843d);
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: var(--admin-surface);
        border: 1px solid var(--admin-border);
        border-radius: 24px;
        color: var(--admin-text);
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .back-btn:hover {
        background: var(--admin-surface-hover);
        border-color: var(--admin-text-secondary);
        transform: translateX(-4px);
    }
    
    .edit-album-container {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 32px;
    }
    
    .album-preview-card {
        background: linear-gradient(180deg, var(--admin-surface) 0%, var(--admin-bg) 100%);
        border-radius: 16px;
        padding: 24px;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid var(--admin-border);
        position: sticky;
        top: 100px;
    }
    
    .album-image-wrapper {
        position: relative;
        width: 220px;
        height: 220px;
        margin: 0 auto 20px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .album-image-wrapper:hover {
        transform: scale(1.02);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.5);
    }
    
    .album-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .album-image-wrapper:hover img {
        transform: scale(1.05);
    }
    
    .album-image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .album-image-wrapper:hover .album-image-overlay {
        opacity: 1;
    }
    
    .album-image-overlay i {
        font-size: 32px;
        color: #fff;
        margin-bottom: 8px;
    }
    
    .album-image-overlay span {
        color: #fff;
        font-size: 13px;
        font-weight: 500;
    }
    
    .album-preview-name {
        font-size: 18px;
        font-weight: 600;
        color: var(--admin-text);
        margin-bottom: 8px;
    }
    
    .album-preview-meta {
        color: var(--admin-text-secondary);
        font-size: 13px;
    }
    
    .edit-form-card {
        background: var(--admin-surface);
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid var(--admin-border);
    }
    
    .form-section-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--admin-text);
        margin-bottom: 24px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--admin-border);
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .form-section-title i {
        color: var(--admin-green);
    }
    
    .form-group {
        margin-bottom: 24px;
    }
    
    .form-group label {
        display: block;
        color: var(--admin-text);
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 10px;
    }
    
    .form-group label .required {
        color: var(--admin-red);
        margin-left: 4px;
    }
    
    .form-input {
        width: 100%;
        padding: 14px 18px;
        background: var(--admin-bg);
        border: 2px solid var(--admin-border);
        border-radius: 12px;
        color: var(--admin-text);
        font-size: 15px;
        transition: all 0.2s ease;
    }
    
    .form-input:focus {
        outline: none;
        border-color: var(--admin-green);
        box-shadow: 0 0 0 4px rgba(29, 185, 84, 0.15);
    }
    
    .form-input::placeholder {
        color: var(--admin-text-secondary);
    }
    
    .file-drop-zone {
        position: relative;
        border: 2px dashed var(--admin-border);
        border-radius: 12px;
        padding: 32px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        background: var(--admin-bg);
    }
    
    .file-drop-zone:hover,
    .file-drop-zone.dragover {
        border-color: var(--admin-green);
        background: rgba(29, 185, 84, 0.05);
    }
    
    .file-drop-zone input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }
    
    .file-drop-icon {
        width: 56px;
        height: 56px;
        margin: 0 auto 16px;
        background: linear-gradient(135deg, var(--admin-green), #15843d);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .file-drop-icon i {
        font-size: 24px;
        color: #fff;
    }
    
    .file-drop-text {
        color: var(--admin-text);
        font-size: 15px;
        font-weight: 500;
        margin-bottom: 8px;
    }
    
    .file-drop-hint {
        color: var(--admin-text-secondary);
        font-size: 13px;
    }
    
    .file-drop-hint span {
        color: var(--admin-green);
        font-weight: 500;
    }
    
    .selected-file {
        display: none;
        align-items: center;
        gap: 12px;
        margin-top: 16px;
        padding: 12px 16px;
        background: rgba(29, 185, 84, 0.1);
        border-radius: 8px;
        border: 1px solid var(--admin-green);
    }
    
    .selected-file.show {
        display: flex;
    }
    
    .selected-file i {
        color: var(--admin-green);
        font-size: 18px;
    }
    
    .selected-file-name {
        flex: 1;
        color: var(--admin-text);
        font-size: 13px;
        font-weight: 500;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .btn-remove-file {
        background: none;
        border: none;
        color: var(--admin-text-secondary);
        cursor: pointer;
        padding: 4px;
        transition: color 0.2s ease;
    }
    
    .btn-remove-file:hover {
        color: var(--admin-red);
    }
    
    .form-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid var(--admin-border);
    }
    
    .btn-cancel {
        flex: 1;
        padding: 14px 24px;
        background: transparent;
        border: 2px solid var(--admin-border);
        border-radius: 12px;
        color: var(--admin-text);
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        text-align: center;
    }
    
    .btn-cancel:hover {
        background: var(--admin-surface-hover);
        border-color: var(--admin-text-secondary);
    }
    
    .btn-save {
        flex: 2;
        padding: 14px 24px;
        background: linear-gradient(135deg, var(--admin-green), #15843d);
        border: none;
        border-radius: 12px;
        color: #fff;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(29, 185, 84, 0.3);
    }
    
    .btn-save:active {
        transform: translateY(0);
    }
    
    .alert-error {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px 20px;
        background: rgba(233, 20, 41, 0.1);
        border: 1px solid var(--admin-red);
        border-radius: 12px;
        margin-bottom: 24px;
        animation: shake 0.5s ease;
    }
    
    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        20%, 60% { transform: translateX(-8px); }
        40%, 80% { transform: translateX(8px); }
    }
    
    .alert-error i {
        color: var(--admin-red);
        font-size: 20px;
    }
    
    .alert-error span {
        color: var(--admin-red);
        font-size: 14px;
        font-weight: 500;
    }
    
    @@media (max-width: 768px) {
        .edit-album-container {
            grid-template-columns: 1fr;
        }
        
        .album-preview-card {
            position: static;
        }
        
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }
        
        .form-actions {
            flex-direction: column;
        }
        
        .btn-cancel, .btn-save {
            flex: none;
            width: 100%;
        }
    }
</style>

<section class="section">
    <div class="edit-album-page">
        <div class="page-header">
            <div class="page-title">
                <h2>Chỉnh sửa Album</h2>
                <span class="badge">Đang chỉnh sửa</span>
            </div>
            <a href="/Admin/ManageAlbum" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                <span>Quay lại danh sách</span>
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["Error"]</span>
            </div>
        }

        <form asp-controller="Admin" asp-action="UpdateAlbum" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="@Model.Id" />
            
            <div class="edit-album-container">
                <div class="album-preview-card">
                    <div class="album-image-wrapper" onclick="document.getElementById('imageFile').click()">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/logo.png" : apiBaseUrl + Model.ImageUrl)" 
                             alt="@Model.Name" 
                             id="previewImage" />
                        <div class="album-image-overlay">
                            <i class="fas fa-camera"></i>
                            <span>Thay đổi ảnh</span>
                        </div>
                    </div>
                    <div class="album-preview-name" id="previewName">@Model.Name</div>
                    <div class="album-preview-meta">
                        <i class="fas fa-compact-disc"></i> Album
                    </div>
                </div>

                <div class="edit-form-card">
                    <div class="form-section-title">
                        <i class="fas fa-edit"></i>
                        Thông tin Album
                    </div>

                    <div class="form-group">
                        <label>
                            Tên album
                            <span class="required">*</span>
                        </label>
                        <input type="text" 
                               name="name" 
                               value="@Model.Name" 
                               required 
                               class="form-input"
                               placeholder="Nhập tên album..."
                               oninput="document.getElementById('previewName').textContent = this.value || 'Tên album'" />
                    </div>

                    <div class="form-group">
                        <label>Hình ảnh bìa album</label>
                        <div class="file-drop-zone" id="dropZone">
                            <input type="file" 
                                   name="imageFile" 
                                   id="imageFile"
                                   accept="image/*" 
                                   onchange="handleFileSelect(this)" />
                            <div class="file-drop-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="file-drop-text">Kéo thả ảnh vào đây</div>
                            <div class="file-drop-hint">hoặc <span>click để chọn file</span></div>
                        </div>
                        <div class="selected-file" id="selectedFile">
                            <i class="fas fa-image"></i>
                            <span class="selected-file-name" id="fileName"></span>
                            <button type="button" class="btn-remove-file" onclick="removeFile()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="/Admin/ManageAlbum" class="btn-cancel">
                            <i class="fas fa-times"></i> Hủy bỏ
                        </a>
                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i>
                            Lưu thay đổi
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('imageFile');
        const selectedFile = document.getElementById('selectedFile');
        const fileName = document.getElementById('fileName');
        const previewImage = document.getElementById('previewImage');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.add('dragover'), false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.remove('dragover'), false);
        });

        dropZone.addEventListener('drop', (e) => {
            const files = e.dataTransfer.files;
            if (files.length) {
                fileInput.files = files;
                handleFileSelect(fileInput);
            }
        });

        function handleFileSelect(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                fileName.textContent = file.name;
                selectedFile.classList.add('show');

                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }

        function removeFile() {
            fileInput.value = '';
            selectedFile.classList.remove('show');
            previewImage.src = '@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/logo.png" : apiBaseUrl + Model.ImageUrl)';
        }
    </script>
}
