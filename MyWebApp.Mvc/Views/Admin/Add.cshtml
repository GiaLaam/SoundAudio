<div class="index-container">
    <h2 class="text-white">Thêm bài hát mới</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-controller="Admin" asp-action="Add" method="post" enctype="multipart/form-data" class="text-white">
        <div class="form-group">
            <label>Tên bài hát:</label>
            <input type="text" name="nameSong" class="form-control" required />
        </div>
        <div class="form-group">
            <label>File bài hát (file MP3):</label>
            <input type="file" name="file" accept=".mp3" class="form-control" required />
        </div>
        <div class="form-group mt-3">
            <label>Ảnh bài hát (JPG/PNG):</label>
            <input type="file" name="imageFile" accept=".jpg,.jpeg,.png" class="form-control" />
        </div>
        <div class="form-group mt-3">
            <label>File lời bài hát (.lrc):</label>
            <input type="file" name="lrcFile" accept=".lrc" class="form-control" />
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Tải lên</button>
        </div>
    </form>
</div>