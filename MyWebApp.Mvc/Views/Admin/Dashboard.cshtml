@{
    ViewData["Title"] = "Bảng điều khiển Admin";
    var totalSongs = ViewBag.TotalSongs ?? 0;
    var totalAlbums = ViewBag.TotalAlbums ?? 0;
    var totalUsers = ViewBag.TotalUsers ?? 0;
    var totalPlaylists = ViewBag.TotalPlaylists ?? 0;
}

<section class="section">
    <div class="section-header">
        <h2 class="section-title">Bảng điều khiển Admin</h2>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon" style="background-color: rgba(29, 185, 84, 0.2);">
                <i class="fas fa-music" style="color: var(--spotify-green);"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@totalSongs</div>
                <div class="stat-label">Bài hát</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: rgba(30, 215, 96, 0.2);">
                <i class="fas fa-compact-disc" style="color: #1ed760;"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@totalAlbums</div>
                <div class="stat-label">Album</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: rgba(83, 83, 255, 0.2);">
                <i class="fas fa-users" style="color: #5353ff;"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@totalUsers</div>
                <div class="stat-label">Người dùng</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: rgba(255, 100, 55, 0.2);">
                <i class="fas fa-list-ul" style="color: #ff6437;"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@totalPlaylists</div>
                <div class="stat-label">Playlist</div>
            </div>
        </div>
    </div>

    <div class="section-header" style="margin-top: 40px;">
        <h3 class="section-title">Quản lý nội dung</h3>
    </div>

    <div class="grid" style="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));">
        <div class="card" onclick="window.location.href='/Admin/ManageMusic'" style="cursor: pointer;">
            <div class="card-image">
                <div class="card-placeholder" style="background: linear-gradient(135deg, var(--spotify-green), #1ed760);">
                    <i class="fas fa-music" style="font-size: 64px;"></i>
                </div>
            </div>
            <div class="card-title">Quản lý bài hát</div>
            <div class="card-subtitle">Thêm, sửa, xóa bài hát</div>
        </div>

        <div class="card" onclick="window.location.href='/Admin/ManageAlbum'" style="cursor: pointer;">
            <div class="card-image">
                <div class="card-placeholder" style="background: linear-gradient(135deg, #1ed760, var(--spotify-green));">
                    <i class="fas fa-compact-disc" style="font-size: 64px;"></i>
                </div>
            </div>
            <div class="card-title">Quản lý album</div>
            <div class="card-subtitle">Thêm, sửa, xóa album</div>
        </div>
    </div>
</section>
